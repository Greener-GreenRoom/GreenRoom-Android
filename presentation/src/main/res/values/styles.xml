    </style>


    <style name="TextInputLayoutStyleNormal" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray400</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeErrorColor">@color/red100</item>
        <item name="android:textColorHint">@color/gray300</item>
        <item name="counterTextAppearance">@style/caption2</item>
        <item name="counterTextColor">@color/gray300</item>
        <item name="counterOverflowTextAppearance">@style/caption2</item>
        <item name="counterOverflowTextColor">@color/red100</item>
        <item name="background">@color/gray000</item>
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/red100</item>
        <item name="errorIconDrawable">@drawable/ic_clear</item>
        <item name="endIconDrawable">@drawable/ic_clear</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorTextAppearance">@style/caption2</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize30" parent="">
        <item name="cornerSize">30dp</item>
    </style>

