<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_login_onboarding_1_title"
            android:layout_width="136dp"
            android:layout_height="84.43dp"
            android:src="@drawable/img_title_logo_login"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="304dp"
            android:layout_height="227dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/img_onboarding_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_login_onboarding_1_title"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize30" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>