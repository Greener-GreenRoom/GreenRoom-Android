<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.greener.presentation.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <View
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bottom_sheet"
            android:paddingTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_real_plant"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_real_plant"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:visibility="@{vm.getCounts()>0 ? View.VISIBLE:View.GONE}"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="@id/gd_start"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded_corner" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{vm.currentPlant.name}"
            android:textAppearance="@style/body1"
            android:textColor="@color/gray700"
            app:layout_constraintBottom_toTopOf="@+id/tv_plant_memo"
            app:layout_constraintStart_toEndOf="@id/img_real_plant"
            app:layout_constraintTop_toTopOf="@id/img_real_plant" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_plant_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="몬스테라"
            android:visibility="@{vm.getCounts()>0 ? View.VISIBLE:View.GONE}"
            android:textAppearance="@style/caption2"
            android:textColor="@color/green300"
            app:layout_constraintBottom_toBottomOf="@id/tv_plant_name"
            app:layout_constraintStart_toEndOf="@id/tv_plant_name"
            app:layout_constraintTop_toTopOf="@id/tv_plant_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_plant_days_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="71일째"
            android:visibility="@{vm.getCounts()>0 ? View.VISIBLE:View.GONE}"
            android:textAppearance="@style/caption2"
            android:textColor="@color/gray300"
            app:layout_constraintBottom_toBottomOf="@id/tv_plant_species"
            app:layout_constraintStart_toEndOf="@id/tv_plant_species"
            app:layout_constraintTop_toTopOf="@id/tv_plant_species" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_plant_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잎이 살짝 시듦."
            android:visibility="@{vm.getCounts()>0 ? View.VISIBLE:View.GONE}"
            android:textAppearance="@style/caption2"
            android:textColor="@color/gray500"
            app:layout_constraintBottom_toBottomOf="@id/img_real_plant"
            app:layout_constraintStart_toStartOf="@id/tv_plant_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_plant_name" />

        <View
            android:id="@+id/divider_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/gray100"
            app:layout_constraintEnd_toEndOf="@id/gd_end"
            app:layout_constraintStart_toStartOf="@id/gd_start"
            app:layout_constraintTop_toTopOf="@+id/bottom_sheet" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_my_plant_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/my_plant_text"
            android:textAppearance="@style/body3"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/gd_start"
            app:layout_constraintTop_toTopOf="@id/divider_line" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_plant_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{vm.getCountsToString()}"
            android:textAppearance="@style/body4"
            android:textColor="@color/green200"
            app:layout_constraintBottom_toBottomOf="@+id/tv_my_plant_txt"
            app:layout_constraintStart_toEndOf="@+id/tv_my_plant_txt"
            app:layout_constraintTop_toTopOf="@+id/tv_my_plant_txt" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_add_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_btn"
            android:textAppearance="@style/body4"
            android:textColor="@color/gray300"
            app:layout_constraintBottom_toBottomOf="@+id/tv_my_plant_txt"
            app:layout_constraintEnd_toEndOf="@+id/gd_end"
            app:layout_constraintTop_toTopOf="@+id/tv_my_plant_txt" />

        <!--
        <ImageButton
            android:id="@+id/btn_add_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_btn_add"
            app:layout_constraintStart_toStartOf="@+id/gd_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_plant_txt" />
            -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:listitem="@layout/item_profile"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="@+id/gd_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_plant_txt" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/grid_system_start" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/grid_system_end" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>