<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray000">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_collection_memo_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="@dimen/grid_system_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_collection_memo_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="@dimen/grid_system_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_collection_memo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_system_tool_bar"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/gray700"
            app:title="@string/collection_memo_title"
            app:titleTextAppearance="@style/body1"
            app:titleTextColor="@color/gray700"/>

        <EditText
            android:id="@+id/et_collection_memo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/body4"
            android:textColor="@color/gray700"
            android:hint="@string/collection_detail_memo_hint"
            android:textColorHint="@color/gray300"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/transparent"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="@id/gl_collection_memo_start"
            app:layout_constraintEnd_toEndOf="@id/gl_collection_memo_end"
            app:layout_constraintTop_toBottomOf="@id/tb_collection_memo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_collection_memo_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/collection_memo_count"
            android:textAppearance="@style/caption2"
            android:textColor="@color/gray300"
            android:layout_marginEnd="8dp"
            android:paddingBottom="8dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/et_collection_memo"
            app:layout_constraintEnd_toEndOf="@id/et_collection_memo"/>

        <View
            android:id="@+id/view_collection_memo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/shape_rounded_corner_8_white"
            app:layout_constraintStart_toStartOf="@id/gl_collection_memo_start"
            app:layout_constraintEnd_toEndOf="@id/gl_collection_memo_end"
            app:layout_constraintTop_toTopOf="@id/et_collection_memo"
            app:layout_constraintBottom_toBottomOf="@id/tv_collection_memo_count"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_collection_memo_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/collection_memo_complete"
            android:textAppearance="@style/body2"
            android:textColor="@color/white"
            android:background="@color/primary"
            app:cornerRadius="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/gl_collection_memo_start"
            app:layout_constraintEnd_toEndOf="@id/gl_collection_memo_end"
            app:layout_constraintTop_toBottomOf="@id/view_collection_memo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
