<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/gray100"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_item_collection_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            layout="@layout/view_green_room_plant_mini_preview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_collection_nickname"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="@style/body1"
            android:textColor="@color/gray700"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include_item_collection_preview"
            tools:text="초롱이"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_collection_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/caption2"
            android:textColor="@color/primary"
            android:layout_marginBottom="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_collection_nickname"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="몬스테라"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
